public class OddEvenCheck {
    public static void main(String[] args) {
        int numToExamine = 2; // input value
        
        if (numToExamine % 2 == 0) {
            System.out.println(numToExamine + " is even");
        } else {
            System.out.println(numToExamine + " is odd");
        }
    }
}
